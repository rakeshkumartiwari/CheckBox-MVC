@model MvcCheckbox.Models.Class1
@{
    ViewBag.Title = "Index";
}

<script>
    $(document).ready(function () {

        $("#btnSubmit").click(function () {
            var n = $("input:checked").length;
            if (n == 0) {
                $("#msgDiv").show();
                $("#errorMsg").text("Please Select any day.");
                return;
            }

        });
    });
   
</script>

<hr/>
<div class="alert alert-danger alert-dismissable" style="display:none" id="msgDiv">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <span id="errorMsg"></span>
</div>

@using (Html.BeginForm())
{

    <div class="container" style="margin-top:50px">
        <div class="form-group form-horizontal col-lg-12">
            @Html.CheckBoxFor(c => c.IsMonday)
            @Html.LabelFor(c => c.IsMonday, "Monday")
            @Html.CheckBoxFor(c => c.IsTuesday)
            @Html.LabelFor(c => c.IsTuesday, "Tuesday")
            @Html.CheckBoxFor(c => c.IsTuesday)
            @Html.LabelFor(c => c.IsWednesday, "Wednesday")
            @Html.CheckBoxFor(c => c.IsWednesday)
            @Html.LabelFor(c => c.IsThrusday, "Thrusday")
            @Html.CheckBoxFor(c => c.IsThrusday)
            @Html.LabelFor(c => c.IsThrusday, "Thrusday")
            @Html.CheckBoxFor(c => c.IsFriday)
            @Html.LabelFor(c => c.IsFriday, "Friday")
            @Html.CheckBoxFor(c => c.IsSaturday)
            @Html.LabelFor(c => c.IsSaturday, "Saturday")
            @Html.CheckBoxFor(c => c.IsSunday)
            @Html.LabelFor(c => c.IsSunday, "Sunday")
        </div>
    </div>


    <input type="submit" value="Save" class="btn btn-primary" id="btnSubmit" />

}


